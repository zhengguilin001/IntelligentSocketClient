<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="240dp" android:layout_height="240dp"
    android:background="#213456">


    <ImageView
        android:layout_width="50dp"
        android:layout_height="71dp"
        android:background="@mipmap/icon_sos_people"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="105dp"
        android:background="@mipmap/icon_ball_head"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>


    <TextView
        android:id="@+id/sosTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="拨打SOS号码"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="86dp"/>

    <TextView
        android:id="@+id/sosTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sosTitle"
        android:text="您还没设置SOS号码哦!"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:visibility="gone"/>



    <RelativeLayout
        android:id="@+id/bottomZone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:background="@mipmap/icon_right_confirm"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:background="@mipmap/icon_left_confirm"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"/>


        <TextView
            android:id="@+id/confirmButton"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:text="确定"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:paddingTop="13dp"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:id="@+id/cancelButton"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:text="取消"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:paddingTop="13dp"
            android:layout_marginRight="15dp"/>

    </RelativeLayout>



</RelativeLayout>