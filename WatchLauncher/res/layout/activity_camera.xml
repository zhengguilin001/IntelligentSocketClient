<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ctyon.watch.ui.activity.CameraActivity">

    <SurfaceView
        android:id="@+id/camera_surface"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <ImageView
        android:id="@+id/iv_full_pic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/iv_take_pic"
        android:layout_gravity="bottom|left"
        android:layout_width="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:src="@mipmap/item_icon_camera"
        android:layout_height="60dp" />
    <ImageView
        android:id="@+id/iv_camera_back"
        android:layout_gravity="bottom|right"
        android:layout_width="55dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:src="@mipmap/item_icon_back"
        android:layout_height="55dp" />
</FrameLayout>
